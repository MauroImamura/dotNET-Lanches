@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img class="img-fluid" height="300px" src="@Model.ImagemUrl"/></p>
    <h3>Preço: @Model.Preco.ToString("c")</h3>

    <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.LancheNome</a>

    <h4>@Model.LancheNome</h4>
    <p>@Model.DescricaoCurta</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
                Incluir no Carrinho
            </a>
        </p>
    </div>
</div>

