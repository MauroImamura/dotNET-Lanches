@model IEnumerable<NET_Lanches.Models.Lanche>

<div>
    <h2>@ViewData["Título"]</h2>
</div>
<h2>@ViewData["Data"]</h2>
<hr />
<h3>@ViewBag.Total: @ViewBag.TotalLanches</h3>
<hr />

<div class="container">
    <div class="row">
    @foreach(var lanche in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4">
            <p><img class="img-fluid" height="300px" src="@lanche.ImagemUrl"/></p>
            <h3>Preço: @lanche.Preco.ToString("c")</h3>
            <h4>@lanche.LancheNome</h4>
            <p>@lanche.DescricaoCurta</p>
        </div>
    }
    </div>
</div>